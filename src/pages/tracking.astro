---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';

const allLogs = await getCollection('dailylog');
const logs = allLogs.sort((a, b) => b.data.date.getTime() - a.data.date.getTime());

// Calculate stats
const totalDays = logs.length;
const totalActivities = logs.reduce((sum, log) => sum + log.data.activities.length, 0);

// Count activities by category
const categoryCount: Record<string, number> = {};
logs.forEach(log => {
  log.data.activities.forEach(activity => {
    const cat = activity.category || 'other';
    categoryCount[cat] = (categoryCount[cat] || 0) + 1;
  });
});

// Mood counts
const moodCount: Record<string, number> = {};
logs.forEach(log => {
  if (log.data.mood) {
    moodCount[log.data.mood] = (moodCount[log.data.mood] || 0) + 1;
  }
});

const moodEmoji: Record<string, string> = {
  great: 'üî•',
  good: 'üòä',
  okay: 'üòê',
  rough: 'üòî'
};

const categoryEmoji: Record<string, string> = {
  fitness: 'üí™',
  learning: 'üìö',
  entertainment: 'üé¨',
  project: 'üíª',
  travel: '‚úàÔ∏è',
  social: 'üë•',
  other: 'üìù'
};
---

<BaseLayout title="Daily Log ¬∑ Milad">
  <div class="tracking-container">
    <div class="tracking-header">
      <h1>Daily Log</h1>
      <p class="subtitle">What I'm doing, day by day</p>
    </div>

    <!-- Quick Stats -->
    <div class="stats-row">
      <div class="stat-pill">
        <span class="stat-number">{totalDays}</span>
        <span class="stat-label">days logged</span>
      </div>
      <div class="stat-pill">
        <span class="stat-number">{totalActivities}</span>
        <span class="stat-label">activities</span>
      </div>
      {Object.entries(moodCount).map(([mood, count]) => (
        <div class="stat-pill mood-pill">
          <span class="stat-emoji">{moodEmoji[mood]}</span>
          <span class="stat-number">{count}</span>
        </div>
      ))}
    </div>

    <!-- Daily Entries -->
    <div class="logs-container">
      {logs.map(async (log) => {
        const { Content } = await log.render();
        const dayName = log.data.date.toLocaleDateString('en-US', { weekday: 'long' });
        const dateStr = log.data.date.toLocaleDateString('en-US', { 
          month: 'long', 
          day: 'numeric',
          year: 'numeric'
        });
        
        return (
          <article class="day-card">
            <header class="day-header">
              <div class="day-date">
                <span class="day-name">{dayName}</span>
                <span class="date-full">{dateStr}</span>
              </div>
              {log.data.mood && (
                <span class="mood-badge" data-mood={log.data.mood}>
                  {moodEmoji[log.data.mood]} {log.data.mood}
                </span>
              )}
            </header>
            
            <ul class="activities-list">
              {log.data.activities.map(activity => (
                <li class="activity-item">
                  <span class="activity-icon">{activity.icon}</span>
                  <span class="activity-text">{activity.text}</span>
                </li>
              ))}
            </ul>
            
            {log.body.trim() && (
              <div class="day-notes">
                <Content />
              </div>
            )}
          </article>
        );
      })}
    </div>

    {logs.length === 0 && (
      <div class="empty-state">
        <p>No daily logs yet. Start documenting your days!</p>
      </div>
    )}
  </div>
</BaseLayout>

<style>
  .tracking-container {
    max-width: 800px;
    margin: 0 auto;
  }

  .tracking-header {
    text-align: center;
    margin-bottom: 3rem;
    padding: 2rem 0;
  }

  .tracking-header h1 {
    font-size: clamp(2.5rem, 8vw, 4rem);
    margin-bottom: 0.5rem;
    background: linear-gradient(135deg, #fff 0%, var(--accent) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .subtitle {
    font-size: 1.25rem;
    color: var(--text-secondary);
  }

  /* Stats Row */
  .stats-row {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
    margin-bottom: 3rem;
  }

  .stat-pill {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: 50px;
    padding: 0.75rem 1.25rem;
  }

  .stat-number {
    font-family: 'JetBrains Mono', monospace;
    font-weight: 700;
    font-size: 1.25rem;
    color: var(--accent);
  }

  .stat-label {
    font-size: 0.875rem;
    color: var(--text-secondary);
  }

  .stat-emoji {
    font-size: 1.25rem;
  }

  /* Day Cards */
  .logs-container {
    display: flex;
    flex-direction: column;
    gap: 2rem;
  }

  .day-card {
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: 16px;
    padding: 2rem;
    transition: all 0.3s;
  }

  .day-card:hover {
    border-color: rgba(59, 130, 246, 0.3);
  }

  .day-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: 1.5rem;
    padding-bottom: 1rem;
    border-bottom: 1px solid var(--border);
  }

  .day-date {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .day-name {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--text-primary);
  }

  .date-full {
    font-family: 'JetBrains Mono', monospace;
    font-size: 0.875rem;
    color: var(--text-secondary);
  }

  .mood-badge {
    font-size: 0.875rem;
    padding: 0.5rem 1rem;
    border-radius: 50px;
    font-weight: 500;
    text-transform: capitalize;
  }

  .mood-badge[data-mood="great"] {
    background: rgba(16, 185, 129, 0.1);
    color: #10b981;
    border: 1px solid rgba(16, 185, 129, 0.2);
  }

  .mood-badge[data-mood="good"] {
    background: rgba(59, 130, 246, 0.1);
    color: #3b82f6;
    border: 1px solid rgba(59, 130, 246, 0.2);
  }

  .mood-badge[data-mood="okay"] {
    background: rgba(245, 158, 11, 0.1);
    color: #f59e0b;
    border: 1px solid rgba(245, 158, 11, 0.2);
  }

  .mood-badge[data-mood="rough"] {
    background: rgba(239, 68, 68, 0.1);
    color: #ef4444;
    border: 1px solid rgba(239, 68, 68, 0.2);
  }

  /* Activities List */
  .activities-list {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .activity-item {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 0.75rem 1rem;
    background: rgba(59, 130, 246, 0.03);
    border-radius: 8px;
    transition: all 0.2s;
  }

  .activity-item:hover {
    background: rgba(59, 130, 246, 0.08);
  }

  .activity-icon {
    font-size: 1.25rem;
    flex-shrink: 0;
  }

  .activity-text {
    color: var(--text-primary);
    line-height: 1.5;
  }

  /* Day Notes */
  .day-notes {
    margin-top: 1.5rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--border);
    color: var(--text-secondary);
    font-style: italic;
    line-height: 1.7;
  }

  .day-notes p {
    margin: 0;
  }

  /* Empty State */
  .empty-state {
    text-align: center;
    padding: 4rem 2rem;
    color: var(--text-secondary);
  }

  @media (max-width: 768px) {
    .day-header {
      flex-direction: column;
      gap: 1rem;
    }

    .stats-row {
      gap: 0.75rem;
    }

    .stat-pill {
      padding: 0.5rem 1rem;
    }

    .day-card {
      padding: 1.5rem;
    }
  }
</style>
