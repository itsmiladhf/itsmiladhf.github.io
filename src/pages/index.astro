---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Milad · Home">
  <div class="hero">
    <div class="hero-content">
      <h1 class="glitch" data-text="MILAD">MILAD</h1>
      <p class="tagline">Developer · Writer · Explorer</p>
      <p class="description">
        Welcome to my corner of the internet. I write about technology, 
        share my thoughts, and document my journey.
      </p>
      <div class="cta-buttons">
        <a href="/blog" class="btn-primary">Read Blog</a>
        <a href="/about" class="btn-secondary">About Me</a>
      </div>
    </div>
  </div>

  <section class="section">
    <h2 class="section-title">Recent Writing</h2>
    <div class="posts-grid">
      <div class="post-card">
        <span class="post-date">Coming Soon</span>
        <h3>Your first blog post will appear here</h3>
        <p>Start writing and sharing your thoughts with the world.</p>
      </div>
    </div>
  </section>

  <section class="section">
    <h2 class="section-title">Timeline Highlights</h2>
    <div class="timeline-preview">
      <div class="timeline-item">
        <div class="timeline-dot"></div>
        <div class="timeline-content">
          <span class="timeline-year">2025</span>
          <p>Built this website</p>
        </div>
      </div>
      <div class="timeline-item">
        <div class="timeline-dot"></div>
        <div class="timeline-content">
          <span class="timeline-year">More to come</span>
          <p>Your journey continues...</p>
        </div>
      </div>
    </div>
    <a href="/timeline" class="view-more">View Full Timeline →</a>
  </section>
</BaseLayout>

<style>
  .hero {
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    position: relative;
    overflow: hidden;
  }

  .hero::before {
    content: '';
    position: absolute;
    width: 500px;
    height: 500px;
    background: radial-gradient(circle, var(--accent-glow) 0%, transparent 70%);
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    animation: pulse 4s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { opacity: 0.3; transform: translate(-50%, -50%) scale(1); }
    50% { opacity: 0.6; transform: translate(-50%, -50%) scale(1.1); }
  }

  .hero-content {
    position: relative;
    z-index: 1;
  }

  h1 {
    font-family: 'JetBrains Mono', monospace;
    font-size: clamp(3rem, 10vw, 6rem);
    font-weight: 700;
    margin-bottom: 1rem;
    letter-spacing: -0.02em;
    background: linear-gradient(135deg, #fff 0%, var(--accent) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .tagline {
    font-size: 1.25rem;
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
    font-weight: 500;
  }

  .description {
    max-width: 600px;
    margin: 0 auto 2rem;
    color: var(--text-secondary);
    font-size: 1.1rem;
    line-height: 1.8;
  }

  .cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .btn-primary, .btn-secondary {
    padding: 0.875rem 2rem;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s;
    font-size: 1rem;
  }

  .btn-primary {
    background: var(--accent);
    color: white;
    box-shadow: 0 0 20px var(--accent-glow);
  }

  .btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 0 30px var(--accent-glow);
  }

  .btn-secondary {
    background: var(--bg-secondary);
    color: var(--text-primary);
    border: 1px solid var(--border);
  }

  .btn-secondary:hover {
    border-color: var(--accent);
    transform: translateY(-2px);
  }

  .section {
    margin: 6rem 0;
  }

  .section-title {
    font-size: 2rem;
    margin-bottom: 2rem;
    font-weight: 600;
  }

  .posts-grid {
    display: grid;
    gap: 1.5rem;
  }

  .post-card {
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 2rem;
    transition: all 0.3s;
  }

  .post-card:hover {
    border-color: var(--accent);
    transform: translateY(-4px);
  }

  .post-date {
    color: var(--accent);
    font-size: 0.875rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .post-card h3 {
    margin: 0.5rem 0;
    font-size: 1.5rem;
  }

  .post-card p {
    color: var(--text-secondary);
    margin: 0;
  }

  .timeline-preview {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .timeline-item {
    display: flex;
    gap: 1.5rem;
    align-items: flex-start;
  }

  .timeline-dot {
    width: 16px;
    height: 16px;
    border-radius: 50%;
    background: var(--accent);
    box-shadow: 0 0 20px var(--accent-glow);
    flex-shrink: 0;
    margin-top: 0.25rem;
  }

  .timeline-content {
    flex: 1;
  }

  .timeline-year {
    font-family: 'JetBrains Mono', monospace;
    color: var(--accent);
    font-weight: 600;
    font-size: 0.875rem;
  }

  .timeline-content p {
    margin: 0.25rem 0 0;
    color: var(--text-secondary);
  }

  .view-more {
    color: var(--accent);
    text-decoration: none;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    transition: gap 0.3s;
  }

  .view-more:hover {
    gap: 0.75rem;
  }

  @media (max-width: 768px) {
    .hero {
      min-height: 60vh;
      padding: 2rem 0;
    }

    h1 {
      font-size: 3rem;
    }

    .cta-buttons {
      flex-direction: column;
      align-items: stretch;
    }
  }
</style>