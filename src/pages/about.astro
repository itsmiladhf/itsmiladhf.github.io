<style>
  .about-container {
    max-width: 900px;
    margin: 0 auto;
  }

  .about-header {
    text-align: center;
    margin-bottom: 5rem;
    padding: 3rem 0;
  }

  .about-header h1 {
    font-size: clamp(3rem, 8vw, 5rem);
    margin-bottom: 1rem;
    background: linear-gradient(135deg, #fff 0%, var(--accent) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .subtitle {
    font-size: 1.5rem;
    color: var(--text-secondary);
    font-weight: 400;
  }

  section {
    margin-bottom: 5rem;
  }

  section h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
    color: var(--text-primary);
  }

  .content-card {
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: 16px;
    padding: 3rem;
    transition: all 0.3s;
  }

  .content-card:hover {
    border-color: var(--accent);
    transform: translateY(-4px);
    box-shadow: 0 12px 32px rgba(59, 130, 246, 0.15);
  }

  .accent-border {
    border-left: 4px solid var(--accent);
  }

  .bio-section h2 {
    font-size: 2rem;
    margin-bottom: 1.5rem;
    color: var(--text-primary);
  }

  .bio-section p {
    font-size: 1.15rem;
    line-height: 1.8;
    color: var(--text-secondary);
    margin-bottom: 1.5rem;
  }

  .bio-section p:last-child {
    margin-bottom: 0;
  }

  .interests-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
  }

  .interest-card {
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 2rem;
    transition: all 0.3s;
    text-align: center;
  }

  .interest-card:hover {
    border-color: var(--accent);
    transform: translateY(-8px);
    box-shadow: 0 12px 24px rgba(59, 130, 246, 0.2);
  }

  .icon {
    font-size: 3rem;
    margin-bottom: 1rem;
    filter: grayscale(0.3);
    transition: all 0.3s;
  }

  .interest-card:hover .icon {
    filter: grayscale(0);
    transform: scale(1.1);
  }

  .interest-card h3 {
    font-size: 1.25rem;
    margin-bottom: 0.75rem;
    color: var(--text-primary);
  }

  .interest-card p {
    color: var(--text-secondary);
    line-height: 1.6;
    font-size: 0.95rem;
  }

  .current-list {
    list-style: none;
    padding: 0;
  }

  .current-list li {
    font-size: 1.15rem;
    line-height: 2;
    color: var(--text-secondary);
    padding: 0.75rem 0;
    border-bottom: 1px solid var(--border);
  }

  .current-list li:last-child {
    border-bottom: none;
  }

  .connect-section {
    text-align: center;
  }

  .connect-intro {
    font-size: 1.15rem;
    color: var(--text-secondary);
    margin-bottom: 2.5rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .social-links {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 64px;
    height: 64px;
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    border-radius: 12px;
    text-decoration: none;
    color: var(--text-primary);
    transition: all 0.3s;
  }

  .social-link:hover {
    border-color: var(--accent);
    transform: translateY(-4px) scale(1.05);
    box-shadow: 0 8px 20px rgba(59, 130, 246, 0.3);
    background: rgba(59, 130, 246, 0.1);
    color: var(--accent);
  }

  .icon-svg {
    width: 28px;
    height: 28px;
  }

  @media (max-width: 768px) {
    .about-header {
      margin-bottom: 3rem;
    }

    .content-card {
      padding: 2rem;
    }

    .interests-grid {
      grid-template-columns: 1fr;
    }

    .social-links {
      gap: 1rem;
    }
  }
</style>